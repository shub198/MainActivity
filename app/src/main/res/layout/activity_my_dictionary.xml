<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dictionary"
    tools:context=".MyDictionary">
    <EditText
        android:id="@+id/search_view_edit_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:hint="@string/edit_text_string"
        android:drawableStart="@drawable/icon_search"
        android:background="@drawable/edit_text_border_layout"
        android:inputType="text"
        android:padding="10dp"
        android:drawablePadding="10dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/button_text"
        android:layout_margin="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:layout_below="@+id/search_view_edit_text"

</RelativeLayout>